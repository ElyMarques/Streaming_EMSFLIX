<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:layout_marginEnd="6dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imageCast"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/logonova"
                android:foreground="?android:attr/selectableItemBackground"
                app:civ_border="true"
                app:civ_border_color_start="@color/colorPrimary"
                app:civ_border_color_end="@color/colorPrimary"
                app:civ_border_color_direction="top_to_bottom"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="0dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageCast"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/castName"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Robert"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:fontFamily="@font/dinbold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/grey_11"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</layout>